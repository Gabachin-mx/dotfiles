* {
    border: none;
    border-radius: 0px;
    font-family: "Jetbrains Mono", "Font Awesome 5 Free";
    font-weight: bold;
    font-size: 12px;
    min-height: 0px;
    margin-top: 0px;
    margin-bottom: 2px;
}

window#waybar {
background: transparent;
/*background: rgba(46, 52, 64, 1.0);
background: #880808;*/
border-top: 0px;
border-bottom: 0px;
color: #D8DEE9;
}

window#waybar.solo {
    /*background-color: #5A5A5A*/
    background: #5A5A5A;
}

tooltip {
    background: #1e1e2e;
    border-radius: 10px;
    border-width: 2px;
    border-style: solid;
    border-color: #11111b;
}
 
 window#waybar.hidden {
     opacity: 0.2;
 }
 
