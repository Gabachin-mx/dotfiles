# Source a file (multi-file configs)
# source = ~/.config/hypr/myColors.conf

#Sourcing external config files
source=~/.config/hypr/env.config

# For all categories, see https://wiki.hyprland.org/Configuring/Variables/
input {
    kb_layout = us
    kb_variant = intl
    kb_model = altgr-intl
    kb_options =
    kb_rules =

    follow_mouse = 1

    touchpad {
        natural_scroll = no
    }

    sensitivity = -0.1 # -1.0 - 1.0, 0 means no modification.
}

general {
    # See https://wiki.hyprland.org/Configuring/Variables/ for more

    gaps_in = 5
    gaps_out = 1
    border_size = 2
    #col.active_border = rgba(964b00ee) rgba(00ff99ee) 45deg
    #col.active_border = rgba(33ccffee) rgba(00ff99ee) 45deg
    #col.active_border=0xFF59795f
    #col.active border=rgb(00ff444444)
    #col.active_border = rgba(8b0000ee)
    col.active_border = rgba(808080ee)
    col.inactive_border = rgba(595959aa)

    layout = dwindle
}

misc {
    disable_hyprland_logo = yes
}

# █▀▄ █▀▀ █▀▀ █▀█ █▀█ ▄▀█ ▀█▀ █ █▀█ █▄░█
# █▄▀ ██▄ █▄▄ █▄█ █▀▄ █▀█ ░█░ █ █▄█ █░▀█

decoration {

  # █▀█ █▀█ █░█ █▄░█ █▀▄   █▀▀ █▀█ █▀█ █▄░█ █▀▀ █▀█
  # █▀▄ █▄█ █▄█ █░▀█ █▄▀   █▄▄ █▄█ █▀▄ █░▀█ ██▄ █▀▄
  rounding = 5

  # █▀█ █▀█ ▄▀█ █▀▀ █ ▀█▀ █▄█
  # █▄█ █▀▀ █▀█ █▄▄ █ ░█░ ░█░
  active_opacity = 1.0
  inactive_opacity = 0.9

  # █▄▄ █░░ █░█ █▀█
  # █▄█ █▄▄ █▄█ █▀▄
 blur {
enabled = true
size = 6
passes = 3
new_optimizations = true
xray = true
ignore_opacity = true
}

  # █▀ █░█ ▄▀█ █▀▄ █▀█ █░█░█
  # ▄█ █▀█ █▀█ █▄▀ █▄█ ▀▄▀▄▀
  drop_shadow = false
  shadow_ignore_window = true
  shadow_offset = 1 2
  shadow_range = 10
  shadow_render_power = 5
  col.shadow = 0x66404040

  #blurls = gtk-layer-shell
  #blurls = waybar
  blurls = lockscreen
}

# ▄▀█ █▄░█ █ █▀▄▀█ ▄▀█ ▀█▀ █ █▀█ █▄░█
# █▀█ █░▀█ █ █░▀░█ █▀█ ░█░ █ █▄█ █░▀█
animations {
  enabled = true

  # █▄▄ █▀▀ ▀█ █ █▀▀ █▀█   █▀▀ █░█ █▀█ █░█ █▀▀
  # █▄█ ██▄ █▄ █ ██▄ █▀▄   █▄▄ █▄█ █▀▄ ▀▄▀ ██▄
  bezier = overshot, 0.05, 0.9, 0.1, 1.05
  bezier = smoothOut, 0.36, 0, 0.66, -0.56
  bezier = smoothIn, 0.25, 1, 0.5, 1

 
  #▄▀█ █▄░█ █ █▀▄▀█ ▄▀█ ▀█▀ █ █▀█ █▄░█
  #█▀█ █░▀█ █ █░▀░█ █▀█ ░█░ █ █▄█ █░▀█
  animation = windows, 1, 5, overshot, slide
  animation = windowsOut, 1, 4, smoothOut, slide
  animation = windowsMove, 1, 4, default
  animation = border, 1, 10, default
  animation = fade, 1, 10, smoothIn
  animation = fadeDim, 1, 10, smoothIn
  animation = workspaces, 1, 6, default

}

dwindle {
    # See https://wiki.hyprland.org/Configuring/Dwindle-Layout/ for more
    pseudotile = yes # master switch for pseudotiling. Enabling is bound to mainMod + P in the keybinds section below
    preserve_split = yes # you probably want this
}

master {
    # See https://wiki.hyprland.org/Configuring/Master-Layout/ for more
    new_is_master = true
}

gestures {
    # See https://wiki.hyprland.org/Configuring/Variables/ for more
    workspace_swipe = on
}

# Example per-device config
# See https://wiki.hyprland.org/Configuring/Keywords/#executing for more
device:epic mouse V1 {
    sensitivity = 0.5
}

# Example windowrule v1
# windowrule = float, ^(kitty)$
# Example windowrule v2
#windowrulev2 = float,class:^(kitty)$,title:^(kitty)$
# See https://wiki.hyprland.org/Configuring/Window-Rules/ for more
# rules below would make the specific app transparent
windowrulev2 = opacity 0.9 0.7,class:^(kitty)$
windowrulev2 = opacity 0.9 0.8,class:^(foot)$
windowrulev2 = opacity 0.9 0.8,class:^(alacritty)$
windowrulev2 = opacity 0.9 0.7,class:^(thunar)$
windowrulev2 = opacity 1.0 1.0,class:^(dunst)$
windowrulev2 = opacity 1.0 1.0,class:^(notify-send)$
windowrulev2 = opacity 0.9 0.7,class:^(pluma)$
# windowrulev2 = opacity 0.8 0.8,class:^(Code)$

# See https://wiki.hyprland.org/Configuring/Keywords/ for more
$mainMod = SUPER

# Example binds, see https://wiki.hyprland.org/Configuring/Binds/ for more
bind = SUPER SHIFT, F, exec, foot  #open the terminal
bind = $mainMod, Return, exec, kitty --title kitty  #open the terminal
bind = SUPER SHIFT, a, exec, alacritty --title alacritty  #open the terminal
#bind = SUPER, x, exec, xterm -xrm 'XTerm.vt100.allowTitleOps: false' -T Xterm #open the terminal
bind = SUPER SHIFT, x, exec, wezterm #open terminal
bind = SUPER, x, exec, terminology --title term #open terminal
bind = $ALT, x, exec, foot -e tmux  #launch tmux
bind = $mainMod,  Q, killactive, # close the active window
bind = SUPER SHIFT, Q, exit,
bind = $mainMod, L, exec, swaylock --color 000000 # Lock the screen
bind = $mainMod, P, exec, wlogout --protocol layer-shell # show the logout window
bind = $mainMod SHIFT, M, exit, # Exit Hyprland all together no (force quit Hyprland)
bind = $mainMod, E, exec, thunar # Show the graphical file browser
bind = $mainMod, V, togglefloating, # Allow a window to float
bind = $mainMod, SPACE, exec, wofi # Show the graphicall app launcher
#bind = $mainMod, P, pseudo, # dwindle
#bind = $mainMod, P, exec, ~/.config/i3/bin/logout.sh
#bind = $mainMod, P, exec, wlogout
bind = $mainMod, J, togglesplit, # dwindle
bind = $mainMod SHIFT, S, exec, grim -g "$(slurp)" - | swappy -f - # take a screenshot
bind = $mainMod, S, exec, hyprshot --m region output --clipboard-only
bind = $mainMod SHIFT, F, exec, firefox
bind = $mainMod, G, exec, google-chrome-stable
bind = $ALT, B, exec, brave
bind = $mainMod, T, exec, qbittorrent
bind = $mainMod, B, exec, ~/.local/bin/rofi-bluetooth
bind = $mainMod, R, exec, kitty -e ranger
bind = $ALT SHIFT, F, exec, kitty -e ~/.local/bin/f.sh
bind = $ALT, Q, exec, qutebrowser
bind = $ALT, M, exec, foot -e micro
bind = $ALT, N, exec, kitty -e newsboat
bind = $ALT SHIFT, X, exec, kitty -e ~/.local/bin/broot
bind = $ALT, V, exec, vlc
bind = $ALT, T, exec, thunderbird
bind = $ALT SHIFT, B, exec, blueman-manager
bind = $ALT, P, exec, kitty -e pulseaudio-equalizer-gtk
bind = $mainMod SHIFT, B, exec, alacritty -e bpytop
bind = $ALT SHIFT, S, exec, flameshot gui
bind = $ALT, G, exec, geany
bind = $mainMod, F, fullscreen

#launch apps (like pluma) with root prvilieges in Wayland
bind = $ALT, H, exec, xhost si:localuser:root

# Toggle Waybar
bind = $mainMod SHIFT, W, exec, killall -SIGUSR1 waybar 

#move widows right left up down
bind = SUPER SHIFT, H, movewindow, l
bind = SUPER SHIFT, L, movewindow, r
bind = SUPER SHIFT, K, movewindow, u
bind = SUPER SHIFT, J, movewindow, d

#float and move windows with mouse (Super+Left Click)
bindm=SUPER,mouse:272,movewindow
bindm=SUPER,mouse:273,resizewindow

