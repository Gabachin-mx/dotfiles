#format-prefix-foreground = ${colors.foreground-alt}
#format-underline = #fba922

[module/memory]
;type = internal/cpu
type = custom/script
exec = free -h | awk '/Mem:/ { printf("%5s  of  %s \n", $3, $2) }'
interval = 2
format-prefix = "RAM "
format-prefix-foreground = ${colors.primary}
;format-underline = #fba922
;label = %percentage:2%%

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "CPU "
format-prefix-foreground = ${colors.primary}
label = %percentage:2%%

[module/swap]
type = custom/script
exec = free -h | awk '/^Swap:/{print $3}'
interval=2
format-prefix ="SWP "
format-prefix-foreground = ${colors.primary}
#format-underline = #fba922

[network-base]
type = internal/network
interval = 5
format-connected = <label-connected>
format-disconnected = <label-disconnected>
label-disconnected = %{F#F0C674}%ifname%%{F#707880} disconnected

[module/weather]
type = custom/script
exec = /home/paul/.config/polybar/scripts/weather.sh
interval = 1800
#format-prefix-foreground = ${colors.primary}
format-prefix-foreground = ${colors.dark-green}
format-foreground = ${colors.dark-green}

[module/date]
type = internal/date
;interval = 1

;date = %H:%M
;date-alt = %Y-%m-%d %H:%M:%S

; Seconds to sleep between updates
interval = 1.0

; See "http://en.cppreference.com/w/cpp/io/manip/put_time" for details on how to format the date string
; NOTE: if you want to use syntax tags here you need to use %%{...}
#date = %{T1}%{T-}%{T2} %d/%a%{T-}
date = %{T-}%{T1} %A, %B %d, %Y%{T-}


; Optional time format
time = %{T1} %%{F#73d0ff} %H : %M%{T-}
;time = %{T1} %%{F#C5C8C6} %H : %M%{T-}

; if `date-alt` or `time-alt` is defined, clicking
; the module will toggle between formats
date-alt = %{T1}%{T-}%{T2} %a, %d %b %y%{T-}
time-alt = %{T2} %H:%M:%S%{T-}

label = %date%%time%
label-font = 0

;label = %date%
;label-foreground = ${colors.primary}
label-foreground = ${colors.dark-green}

[settings]
screenchange-reload = true
pseudo-transparency = true

[module/xbacklight]
type = custom/script
#exec = xbacklight | cut -f1 -d'.'  | awk '{print $1"%"}'
exec = brightnessctl | grep % | awk '{print $4}' | sed 's/(//g' | sed 's/)//g'
format-prefix = " "
format-prefix-foreground = ${colors.primary}

[module/wlan]
;type = internal/network
;interface = wlan0
;interval = 3.0
type = custom/script
exec = nmcli -t -f SSID,SIGNAL dev wifi list | grep "^IZZI-10B2:" | cut -d : -f 2 | awk '{print $1"%"}'
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.primary}

[module/updates-pacman-aurhelper]
type = custom/script
exec = /home/paul/.config/polybar/scripts/updates.sh | cut -c 2-
click-left = kitty -e sudo pacman -Syu &
format-prefix = " "
#format-prefix-foreground = ${colors.foreground-alt}
format-prefix-foreground = ${colors.primary}
#format-underline = #fba922
format-foreground = #FF0000
#format-background = ${colors.background}
interval = 600

[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1

label-open = 
;label-open = 
#label-open-foreground = ${colors.primary}
label-open-foreground = #FF0000
label-close =  cancel
label-close-foreground = ${colors.primary}

